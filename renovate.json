{
  "extends": [
    "config:base",
    ":automergePatch"
  ],
  "regexManagers": [
    {
      "fileMatch": [
        "(^|/)rstudio_vars.yml",
      ],
      "matchStrings": [
        "#\\srenovate:\\sdatasource=(?<datasource>.*?) depName=(?<depName>.*?)( versioning=(?<versioning>.*?))?( extractVersion=(?<extractVersion>.*?))?\\s(ENV|ARG) .*?_VERSION=(?<currentValue>.*)\\s"
      ]
    }
  ],
  "packageRules": [
    {
      "updateTypes": ["major"],
      "addLabels": ["major"]
    },
    {
      "updateTypes": ["minor"],
      "addLabels": ["minor"]
    },
     {
      "updateTypes": ["patch"],
      "addLabels": ["patch"]
    },
    {
      "updateTypes": ["pin"],
      "addLabels": ["pin"]
    }
   ],
   "vulnerabilityAlerts": {
    "labels": ["security"]
  },
  "baseBranches": ["dev"],
  "reviewers": ["team:portal-dev"],
  "labels": ["dependencies"],
  "assignees": ["team:portal-dev"],
  "branchPrefix": "deps/",
  "bumpVersion": "minor",
  "rebaseWhen": "behind-base-branch",
  "commitBodyTable": "true",
  "commitMessagePrefix": "feat(Dependencies):"
}
