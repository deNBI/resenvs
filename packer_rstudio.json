{
  "variables": {
    "network": ""
  },
  "builders":
  [{
    "type": "openstack",
    "image_name": "RStudio-ubuntu20 ({{isotime `2006-01-02`}})",
    "source_image_filter": {
      "filters": {
        "tags": ["{{user `base_image_tag`}}"],
        "properties": {
          "os_distro": "ubuntu",
          "os_version": "2004"
        }
      },
      "most_recent": true
    },
    "networks": "{{user `network`}}",
    "flavor": "de.NBI tiny",
    "ssh_username": "ubuntu",
    "image_tags": ["{{user `rstudio_tag`}}"]
  }],
  "provisioners":
  [{
    "type": "ansible",
    "playbook_file": "./packer_resenvs.yml",
    "extra_arguments": ["--extra-vars", "resenv=rstudio"]
  }]
}
