{
  "variables": {
    "network": "",
    "os_distro": "",
    "os_version": ""
  },
  "builders": [
    {
      "type": "openstack",
      "image_name": "{{user `os_distro`}}{{user `os_version`}} de.NBI (C) Master ({{isotime `2006-01-02`}})",
      "source_image_filter": {
        "filters": {
          "tags": [
            "{{user `base_image_tag`}}"
          ],
          "properties": {
            "os_distro": "{{user `os_distro`}}",
            "os_version": "{{user `os_version`}}"
          }
        },
        "most_recent": true
      },
      "networks": "{{user `network`}}",
      "flavor": "de.NBI tiny",
      "ssh_username": "ubuntu",
      "image_tags": [
        "cluster",
        "master",
        "base"
      ],
      "metadata": {
        "github_hash": "{{user `github_hash`}}"
      }
    }
  ],
  "provisioners": [
    {
      "type": "ansible",
      "playbook_file": "../cluster/master.site.yml",
      "extra_arguments": [
        "-v",
        "--extra-vars",
        "mode=openstack"
      ]
    }
  ]
}
